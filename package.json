{
    "name": "masumi-payment-service",
    "version": "0.1.0",
    "description": "A Payment service for MASUMI AI Nodes",
    "main": "dist/index.js",
    "author": "NMKR",
    "license": "MIT",
    "type": "module",
    "prisma": {
        "seed": "tsx ./prisma/seed.ts"
    },
    "scripts": {
        "prepare": "husky",
        "lint": "eslint --fix --quiet --config eslint.config.mjs",
        "format": "prettier --log-level silent --write src/**/*.ts",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "prisma:generate": "npx prisma generate",
        "prisma:migrate": "npx prisma migrate deploy",
        "prisma:migrate:dev": "npx prisma migrate dev",
        "prisma:seed": "npx prisma db seed",
        "dev": "tsx watch ./src/index.ts",
        "build": "npx prisma generate && pkgroll",
        "start": "NODE_ENV=production && node ./dist/index.js",
        "swagger-json": "export DATABASE_URL=set-mock-db-for-generation && export ENCRYPTION_KEY=set-mock-enc-key-for-generation && tsx ./src/utils/generator/swagger-generator/cli.ts"
    },
    "dependencies": {
        "@asteasolutions/zod-to-openapi": "^7.3.0",
        "@blockfrost/blockfrost-js": "^6.0.0",
        "@emurgo/cardano-serialization-lib-nodejs": "^14.1.1",
        "@meshsdk/core": "^1.8.14",
        "@meshsdk/core-cst": "^1.8.14",
        "@paralleldrive/cuid2": "^2.2.2",
        "@prisma/client": "^6.4.0",
        "advanced-retry": "^1.2.1",
        "async-sema": "^3.1.1",
        "cbor": "^10.0.3",
        "dotenv": "^16.4.7",
        "ethereum-cryptography": "^3.1.0",
        "express": "^5.0.1",
        "express-zod-api": "^22.9.1",
        "http-errors": "^2.0.0",
        "http-status-codes": "^2.3.0",
        "lucid-cardano": "^0.10.11",
        "node": "18.19.0",
        "swagger-ui-express": "^5.0.1",
        "winston": "^3.17.0",
        "zod": "^3.24.2"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.7.1",
        "@commitlint/config-conventional": "^19.7.1",
        "@eslint/js": "^9.19.0",
        "@types/express": "^5.0.0",
        "@types/jest": "^29.5.14",
        "@types/node": "18.19.0",
        "@types/node-cron": "^3.0.11",
        "@types/swagger-ui-express": "^4.1.7",
        "@typescript-eslint/eslint-plugin": "^8.24.1",
        "@typescript-eslint/parser": "^8.24.1",
        "eslint": "^9.20.1",
        "eslint-config-prettier": "^10.0.1",
        "eslint-plugin-prettier": "^5.2.3",
        "globals": "^15.15.0",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "lint-staged": "^15.4.3",
        "pkgroll": "^2.10.0",
        "prettier": "^3.5.1",
        "prisma": "^6.4.0",
        "ts-jest": "^29.2.5",
        "ts-node": "^10.9.2",
        "tsx": "^4.19.3",
        "typescript": "^5.7.3",
        "typescript-eslint": "^8.24.1"
    },
    "lint-staged": {
        "*.{js,ts}": [
            "npm run lint",
            "npm run format"
        ]
    }
}
