#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Colors
GREEN='\033[0;32m'
BLUE='\033[0;34m'
RED='\033[0;31m'
NC='\033[0m' # No Color

echo "${BLUE}üîç Checking commit message format...${NC}"
npx commitlint --edit $1 || 
(
    echo "${RED}‚ùå Commit message does not follow conventional commit format.${NC}"
    echo "${RED}Format: <type>(<scope>): <subject>${NC}"
    echo "${RED}Example: feat(auth): add login functionality${NC}"
    echo "${RED}Types: feat, fix, docs, style, refactor, test, chore, perf, ci, revert, build${NC}"
    false;
) 