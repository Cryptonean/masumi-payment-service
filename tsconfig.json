{
  "compilerOptions": {
    "module": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "pretty": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2021",
    "outDir": "./dist",
    "baseUrl": ".",
    "experimentalDecorators": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["src/*"],
      "@smart-contracts/*": ["smart-contracts/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "smart-contracts/**/plutus.json",
    "eslint.config.mjs"
  ],
  "exclude": ["node_modules"]
}
